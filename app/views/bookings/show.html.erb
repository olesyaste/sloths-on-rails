<div class="container">
  <h1>Your booking for <%= @booking.sloth.name.upcase %></h1>
  <h4>From <%= @booking.start_date %> to <%= @booking.end_date %></h4>
  <h5>Total cost: <%= @booking.total_cost %>â‚¬</h5>
  <i class="fas fa-map-pin"><%= @booking.sloth.address %></i>
  <div class="show-photo">
  <% if @booking.sloth.photos.attached? %>
    <% @booking.sloth.photos.each do |photo| %>
      <%= cl_image_tag photo.key, :width=>400, :height=>300, :crop=>"fill" %>
    <% end %>
  <% end %>
  </div>

  <div>
  <h3>ABOUT <%= @booking.sloth.name.upcase %></h3>
    <p> <%= @booking.sloth.details %> </p>
  </div>

  <div >
    <%= link_to "Back", bookings_path, class: "btn btn-primary m-3"%>

  <% if current_user == @booking.user %>
    <%= link_to "Edit booking", edit_booking_path(@booking), class: "btn btn-primary m-3"%>
  <% end %>

  <% if current_user == @booking.user %>
    <%= link_to "Review", new_booking_review_path(@booking), class: "btn btn-primary m-3"%>
  <% end %>

  <% if current_user == @booking.user %>
    <%= link_to "Delete booking", booking_path(@booking), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary m-3"%>
  <% end %>
  </div>
</div>
