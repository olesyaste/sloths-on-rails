<div class="container">
  <%= simple_form_for @sloth do |f| %>
    <%= f.input :photos, as: :file %>
    <%= f.input :name, placeholder: 'name' %>
    <%= f.input :address, placeholder: 'addess' %>
    <%= f.input :price, placeholder: 'price' %>
    <%= f.button :submit, class: 'btn', value: 'upload photo' %>
  <% end %>
</div>
