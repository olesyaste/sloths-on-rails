<div class="container new-form">
  <div class="contex-form">
    <h1>list your Sloth</h1>
    <p>lets set up your listing</p>
  </div>
<%= simple_form_for @sloth do |f| %>
  <%= f.input :name %>
  <%= f.input :address, input_html: { class: 'auto-address-fill' } %>
  <%= f.input :details %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true }, required: true %>
  <%= f.submit "create new sloth", class: "btn btn-dark" %>
  <% end %>
<div>
<%= link_to "Back", sloths_path, class: "btn btn-dark m-3" %>
</div>
</div>
