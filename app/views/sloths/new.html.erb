<h1>add your sloth</h1>

<div class="container">
<%= simple_form_for @sloth do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :details %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit, value: 'add a sloth', class: "btn btn-primary" %>
  <% end %>

<%= link_to "Back", sloths_path, class: "btn btn-primary" %>
</div>
