<div class="container">
  <h1><%= @sloth.name.upcase %></h1>
  <i class="fas fa-map-pin"><%= @sloth.address %></i>
  <div class="show-photo">
  <% if @sloth.photos.attached? %>
    <% @sloth.photos.each do |photo| %>
      <%= cl_image_tag photo.key, :width=>400, :height=>300, :crop=>"fill" %>
    <% end %>
  <% end %>
  </div>

  <div>
  <h3>ABOUT <%= @sloth.name.upcase %></h3>
    <p> <%= @sloth.details %> </p>
    <p> Price:<%= @sloth.price %>â‚¬ </p>
  </div>

<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">  <% if current_user != @sloth.user %>
    <h1>Book <%= @sloth.name %></h1>
    <%= simple_form_for [@sloth, @booking] do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.submit "Create your booking", class: "btn btn-primary" %>
    <% end %>
  <% end %>
  </div>
</div>

<%= link_to "Home", sloths_path, class: "btn btn-primary" %>


  <% if current_user == @sloth.user %>
    <%= link_to "Edit", edit_sloth_path(@sloth), class: "btn btn-primary m-3"%>
  <% end %>

  <% if current_user == @sloth.user %>
    <%= link_to "Delete", sloth_path(@sloth), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary m-3"%>
  <% end %>

    <div >
      <%= link_to "Back", sloths_path, class: "btn btn-primary m-3"%>
    </div>
</div>

  <div id="map", class = "mt-3 container",
     style="width: 100%; height: 300px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
